{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "lib": [
      "ES2020",
      "ES2020.BigInt",
      "DOM"
    ],
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "../out",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts"
  ]
}
