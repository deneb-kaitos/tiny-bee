{
  "name": "@deneb-kaitos/tiny-bee-serializers-serde",
  "private": true,
  "version": "0.0.0",
  "description": "SerDe",
  "type": "module",
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": "22.5.1",
    "pnpm": "9.5.0"
  },
  "engineStrict": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "ESLINT_USE_FLAT_CONFIG=true ./node_modules/.bin/eslint **/*.js",
    "build:schema": "cd ../fbs && ./.bin/compile.mjs",
    "test": "pnpm run lint && pnpm run build:schema && NODE_ENV=test NODE_DEBUG=serde* ./node_modules/.bin/c8 ./node_modules/.bin/mocha"
  },
  "author": "Dmitry N. Medvedev <dmitry.medvedev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@deneb-kaitos/tiny-bee-fbs": "workspace:^",
    "flatbuffers": "catalog:web"
  },
  "devDependencies": {
    "c8": "catalog:web",
    "chai": "catalog:web",
    "dotenv": "catalog:web",
    "eslint": "catalog:web",
    "eslint-config-airbnb-base": "catalog:web",
    "eslint-plugin-chai-friendly": "catalog:web",
    "eslint-plugin-import": "catalog:web",
    "eslint-plugin-node": "catalog:web",
    "mocha": "catalog:web"
  },
  "mocha": {
    "allowUncaught": true,
    "failZero": true,
    "async-only": false,
    "bail": true,
    "checkLeaks": true,
    "forbidOnly": true,
    "exit": true,
    "forbidPending": true,
    "slow": 50,
    "timeout": 1000,
    "color": true,
    "diff": true,
    "fullTrace": true,
    "growl": false,
    "inline-diffs": true,
    "reporter": "spec",
    "noConfig": true,
    "noOpts": true,
    "exclude": [
      "**/node_modules/**/*"
    ],
    "spec": [
      "**/specs/*.js"
    ]
  }
}
